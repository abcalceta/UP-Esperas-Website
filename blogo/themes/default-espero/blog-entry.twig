{% embed "index.twig" %}
    {% block before_content %}
        <h1>{{ current_page.meta.title }}</h1>

        {% if current_page.date %}
        <p>
            Published on {{ current_page.date }}
        </p>
        {% endif %}

        <hr>

        {% if current_page.meta.tags %}
        <p>
            {% for tag in current_page.meta.tags|apply_tag_filter %}
                <a class="button tag-button" href="{{ base_url }}/tag/{{ tag }}">{{ tag }}</a>
            {% endfor %}
        </p>
        {% endif %}
    {% endblock %}
{% endembed %}